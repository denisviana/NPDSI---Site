<!DOCTYPE html>

<html lang="pt-br">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>NPDSI - @ViewBag.Title</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />

    <link rel="shortcut icon" href="~/images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon">

    <link href="https://fonts.googleapis.com/css?family=Comfortaa:700" rel="stylesheet">

</head>


<!-- Inicío do Body-->
<body>


    <nav id="barra-de-menus" class="navbar fixed-top  bg-faded navbar-toggleable-sm">
        <button class="navbar-toggler navbar-toggler-right" type="button"
                data-toggle="collapse" data-target="#mobile"
                aria-controls="mobile" aria-expanded="false" aria-label="Toggle navigation">
            <span><i class="material-icons">menu</i></span>
        </button>

        <a class="navbar-brand" href="#">
            <img id="img-navbar-logo" src="~/images/npdsi_logo.png" />
        </a>

        <div class="navbar-collapse collapse" id="mobile" aria-expanded="false">
            <ul class="navbar-nav ">
                <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Projetos</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Notícias</a></li>
                <li class="nav-item"><a class="nav-link" href="#">Editais</a></li>
                <li class="nav-item"><a class="nav-link" href="#sobre-npdsi">Sobre o NPDSI</a></li>
            </ul>
        </div>

    </nav>


    <div id="container-logo" class="container" style="margin-top: 50px; padding-top:20px;">
        <div class="row">
            <div class="col-6">
                <img class="img-fluid mx-auto d-block" src="~/images/npdsi_logo_com_nome.png" />
            </div>
            <div class="col-6">
                <img style="position:relative; top:20%;" class="img-fluid mx-auto d-block" src="~/images/logo_undb.png" />
            </div>
        </div>
    </div>

    @RenderBody()

    <footer>
        <div class="nav rodape">
            <div class="container rodape">
                <div class="row">

                    <div class="col-sm-6 d-block">
                        <table class="mx-auto">
                            <tr style="vertical-align:middle;">
                                <td><i class="material-icons">email</i></td>
                                <td>npdsi@undb.edu.br</td>
                            </tr>
                            <tr>
                                <td><i class="material-icons">location_on</i></td>
                                <td>Av. Colares Moreira, 443, Renascença II</td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-sm-6 ">
                        <ul class="nav mx-auto" style="margin-left:10px;">
                            <li class="item-rede-social"> <a href="#"><img src="~/images/facebook.svg" /></a> </li>
                            <li class="item-rede-social"><a href="#"><img src="~/images/instagram.svg" /></a> </li>
                        </ul>
                    </div>

                </div>

            </div>

        </div>
        <div style="background-color: #000; text-align:center;">
            <small style="color: #fff;">&copy; 2017 - NPDSI - Todos os direitos reservados</small>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/jscript.js"></script>

    @RenderSection("Scripts", required: false)
</body>
<!-- Fim do Body -->

</html>
