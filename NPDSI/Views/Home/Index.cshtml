@{
    ViewBag.Title = "Home";
}



<div class="container">
    <div class="row no-gutters" id="row-principal">
        <div class="col-md-8">
            <div class="carousel slide" data-ride="carousel" id="carrossel">
                <ol class="carousel-indicators">
                    <li data-slide="0" data-target="#carrossel" data-slide-to="0" class="active"></li>
                    <li data-slide="1" data-target="#carrossel" data-slide-to="1"></li>
                </ol>

                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="~/images/npdsi_sigo.jpg" alt="First Slide" />
                        <div class="carousel-caption d-none d-md-block">
                            <h2>SIGO APP</h2>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/images/npdsi-khunters.jpg" alt="Second Slide" />
                        <div class="carousel-caption d-none d-md-block">
                            <h2>K-HUNTERS, JOGO PARA CRIANÇAS COM AUTISMO</h2>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carrossel" role="button" data-slide="prev">
                    <span aria-hidden="true"><i class="material-icons">keyboard_arrow_left</i></span>
                </a>
                <a class="carousel-control-next" href="#carrossel" role="button" data-slide="next">
                    <span aria-hidden="true"><i class="material-icons">keyboard_arrow_right</i></span>
                </a>
            </div>
        </div>
        <div id="painel-noticias" class="col-md-4 " style="background-color: #1C2A39">
            <div>
                <small style="color: darkgrey; margin: 3px 0; display: block; text-align: center;">OUTRAS NOTÍCIAS</small>

                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">SIGO APP</h5>
                            <small>hoje</small>
                        </div>
                        <p class="mb-1">Concluída 1ª fase do App para Georreferenciamento de ônibus em São Luis.</p>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">K-HUNTERS</h5>
                            <small class="text-muted">ontem</small>
                        </div>
                        <p class="mb-1">Iniciado desenvolvimento de jogo para crianças com autismo.</p>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



